<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
tools:context=".SignUp">
<!--<ScrollView-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent">-->
<TextView
    android:id="@+id/tv_welcome2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome!"
    android:textColor="@color/dark"
    android:textSize="30sp"
    android:fontFamily="sans-serif-light"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"/>

<TextView
    android:id="@+id/tv_create"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_welcome2"
    android:layout_alignStart="@id/tv_welcome2"
    android:fontFamily="sans-serif-light"
    android:text="Create New Account!"
    android:textColor="@color/dark"
    android:textSize="40sp" />

<com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
    android:id="@+id/su_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:neomorph_view_type="rectangular"
    app:neomorph_shadow_type="outer"
    app:neomorph_elevation="6dp"
    app:neomorph_corner_radius="10dp"
    app:neomorph_background_color="@color/background"
    app:neomorph_shadow_color="@color/shadow_color"
    app:neomorph_highlight_color="@color/highlight"
    android:layout_above="@+id/layout_pass">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle"
        android:hint="Full Name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

</com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

<com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
    android:id="@+id/layout_pass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:neomorph_view_type="rectangular"
    app:neomorph_shadow_type="outer"
    app:neomorph_elevation="6dp"
    app:neomorph_corner_radius="10dp"
    app:neomorph_background_color="@color/background"
    app:neomorph_shadow_color="@color/shadow_color"
    app:neomorph_highlight_color="@color/highlight"
    android:layout_centerInParent="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle"
        android:hint="******"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

</com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Forgot Password?"
    android:layout_below="@+id/layout_pass"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="10dp"
    android:textColor="@color/dark"/>

<com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
    android:id="@+id/layout_login_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:neomorph_view_type="rectangular"
    app:neomorph_shadow_type="outer"
    app:neomorph_elevation="6dp"
    app:neomorph_corner_radius="10dp"
    app:neomorph_background_color="@color/background"
    app:neomorph_shadow_color="@color/shadow_color"
    app:neomorph_highlight_color="@color/highlight"
    android:layout_below="@+id/layout_pass"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:text="LOGIN"
        android:textColor="@color/highlight"/>

</com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_login_btn"
    android:gravity="center">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:padding="10dp"/>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ggll"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/google" />

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textColor="@color/dark"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Register Now!"
        android:textStyle="bold"
        android:textColor="@color/dark"
        android:textSize="14sp"/>

</LinearLayout>
<!--</ScrollView>-->
</RelativeLayout>