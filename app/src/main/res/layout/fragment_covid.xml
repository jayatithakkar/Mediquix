<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CovidFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medical Tests"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:background="@color/background"
        android:id="@+id/tst"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Note: Enter data from your Laboratory reports only*"
        android:layout_below="@+id/tst"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:id="@+id/nt"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="TSH (Thyroid Stimulating Hormone)"
        android:gravity="center_horizontal"
        android:layout_below="@+id/nt"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/tsh"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nt"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="215dp"
        android:layout_marginRight="75dp"
        android:id="@+id/ettsh"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nt"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="360dp"
        android:text="mIU/L"/>






    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="T3"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tsh"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/tthree"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tsh"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="75dp"
        android:id="@+id/ett3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tsh"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="360dp"
        android:text="ng/dL"/>


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="T4
"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tthree"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/tfour"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tthree"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="75dp"
        android:id="@+id/ett4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tthree"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="360dp"
        android:text="ng/dL"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="Submit"
        android:layout_below="@+id/tfour"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/btnt4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnt4"
        android:layout_centerHorizontal="true"
        android:text="hi"
        android:layout_marginTop="35dp"
        android:textSize="30dp"
        android:textColor="@color/dark"
        android:visibility="invisible"
        android:id="@+id/rs"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Click here to know what went wrong!"
        android:textColor="#1EB0F3"
        android:layout_below="@+id/rs"
        android:layout_marginTop="35dp"
        android:visibility="invisible"
        android:id="@+id/rs2"/>



</RelativeLayout>